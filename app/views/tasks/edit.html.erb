<h1><%= t('.title') %></h1>

<% if @task.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this tasks from being saved:</h2>
    <ul>
        <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_with(model: @task, local: true) do |f| %>
<div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>

<div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
</div>

<div class="actions">
    <%= f.submit t('helpers.submit.update'), class: "btn btn-primary" %>
</div>
<% end %>

<%= link_to t('common.back'), tasks_path %>
