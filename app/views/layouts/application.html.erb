<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebRailsSessionLoginTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <header>
      <nav>
        <% if logged_in? %>
          <%= link_to "タスク一覧", tasks_path(@task), id: "tasks-index" %>
          <%= link_to "タスクを登録する", new_task_path(@task), id: "new-task" %>
          <%= link_to "アカウント", user_path(current_user), id: "my-account" %>
          <%= link_to "ログアウト", session_path(current_user), method: :delete, id: "sign-out" %>
        <% else %>
          <%= link_to "アカウント登録", new_user_path, id: "sign-up" %>
          <%= link_to "ログイン", new_session_path, id: "sign-in" %>
        <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
